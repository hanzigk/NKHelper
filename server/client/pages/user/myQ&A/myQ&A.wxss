.navbar{
  display: grid;
  flex-direction: row;
}
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff; 
  font-family: "微软雅黑";
  font-size: 32rpx;
  color: #ab998d;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: #b7cad8;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #b7cad8;  
}  
